{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run compile.sh",
            "type": "shell",
            "command": "./compile.sh",
            "options": {
                "cwd": "${workspaceFolder}/VulkanGameEngine"
            },
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "bash",
            "args": [
                "-c",
                "mkdir -p bin && find src -name \"*.cpp\" > sources.txt && g++ -std=c++17 -fdiagnostics-color=always -Wall -g @sources.txt $(find src include -type d -printf \"-I%p \") -o bin/VGE -lglfw -lvulkan"
            ],
            "options": {
                "cwd": "${workspaceFolder}/VulkanGameEngine"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "compiler: /usr/bin/g++"
        },
        {
            "label": "Build and Run Script",
            "dependsOn": [
                "Run compile.sh",
                "C/C++: g++ build active file"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}